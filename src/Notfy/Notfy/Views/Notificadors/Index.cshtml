@model IEnumerable<Notfy.Models.Notificador>

@{
    ViewBag.Title = "Index";
}

<h3>NOTIFICADORES</h3>

<p>
    <a href='@Url.Action("Create", "Notificadors")' class="fa fa-plus-circle fa-3x" style="text-decoration: none" title="Incluir novo notificador"></a>
</p>

<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CPF)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CPF)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            <a href='@Url.Action("Edit", "Notificadors", new { id = item.ID })' class="fa fa-edit fa-2x" style="text-decoration: none" title="Editar notificador"></a>
            <a href='@Url.Action("Details", "Notificadors", new { id = item.ID })' class="fa fa-eye fa-2x" style="text-decoration: none; margin-left: 3px;" title="Visualizar notificador"></a>
            <a href='@Url.Action("Delete", "Notificadors", new { id = item.ID })' class="fa fa-trash fa-2x" style="text-decoration: none; margin-left: 3px;" title="Excluir notificador"></a>
        </td>
    </tr>
}

</table>

<div>
    <a href='@Url.Action("Index", "Notificacaos", new { tipoUsuario = "Administrador" })' class="fa fa-arrow-circle-left fa-3x" style="text-decoration: none" title="Voltar"></a>
</div>
